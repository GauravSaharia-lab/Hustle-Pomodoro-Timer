<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Light_white"
    tools:context="com.hustlestudio.admob.MainActivity">


    <soup.neumorphism.NeumorphFloatingActionButton
        android:id="@+id/basin"
        android:layout_width="220dp"
        android:layout_height="220dp"

        android:layout_centerInParent="true"
        app:neumorph_shapeType="basin"
        tools:ignore="SpeakableTextPresentCheck" />


    <soup.neumorphism.NeumorphFloatingActionButton
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_centerInParent="true"
        app:neumorph_shapeType="flat"
        android:id="@+id/presed"

        />


    <soup.neumorphism.NeumorphButton
        android:id="@+id/ResetButton"
        android:layout_width="130dp"
        android:layout_height="80dp"

        android:layout_below="@+id/presed"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="120dp"
        android:gravity="center"
        android:text="Reset"
        android:textColor="#1ce4eb"
        android:textStyle="bold" />

    <soup.neumorphism.NeumorphButton
        android:id="@+id/Start"
        android:layout_width="130dp"
        android:layout_height="80dp"

        android:layout_below="@+id/presed"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="120dp"
        android:gravity="center"
        android:text="Start"
        android:textColor="#1ce4eb"
        android:textStyle="bold" />

    <soup.neumorphism.NeumorphFloatingActionButton
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:layout_below="@+id/twentyFive"
        android:layout_marginLeft="390dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/twentyFive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="25:00"
        android:textColor="@color/dark_white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/xCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="420dp"
        android:layout_marginTop="48dp"
        android:text="x0"
        android:layout_below="@+id/twentyFive"
        android:textColor="#417ffa"
        android:textSize="20sp" />


    <soup.neumorphism.NeumorphCardView
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        app:neumorph_shapeType="pressed" />


    <TextView
        android:id="@+id/min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="233dp"

        android:layout_marginTop="150dp"

        android:text="0 minutes"
        android:textColor="@color/dark_white"
        android:textSize="17sp"


        />

    <TextView
        android:id="@+id/hr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="150dp"
        android:layout_toEndOf="@+id/min"

        android:text="=0:00 hrs"
        android:textColor="@color/dark_white"
        android:textSize="18sp"


        />


    <ProgressBar
        android:id="@+id/progressbar_timerview"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="340dp"
        android:layout_height="340dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal|bottom"
        android:indeterminate="false"
        android:progressDrawable="@drawable/circleshape_timerview" />

    <ProgressBar
        android:id="@+id/progressbar1_timerview"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="340dp"
        android:layout_height="340dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal|center"
        android:indeterminate="false"
        android:progressDrawable="@drawable/circleshape1_timerview"
        android:visibility="gone" />





</RelativeLayout>